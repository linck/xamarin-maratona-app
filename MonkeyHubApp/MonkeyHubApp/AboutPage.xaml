<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MonkeyHubApp.AboutPage"
             Title="Sobre">
    <TableView Intent="Menu">
        <TableRoot>
            <TableSection Title="Versão">
                <TextCell Text="{Binding Versao}" />
            </TableSection>
            <TableSection Title="Informação do usuário">
                <TextCell Text="{Binding UserInformation}" />
            </TableSection>
            <TableSection Title="Termos de Uso">
                <SwitchCell Text="Aceito os termos de uso" />
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>